{
  "name": "bridge",
  "version": "0.1.0",
  "description": "A project to bridge NCG between NineChronicles network and Ethereum network.",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "test": "run-s test:*",
    "test:aws": "jest --config=./aws.jest.config.js",
    "test:bridge": "jest --config=./bridge.jest.config.js",
    "coverage": "jest --coverage --config=./bridge.jest.config.js",
    "lint": "eslint src --ext .ts",
    "build": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planetarium/NineChronicles.EthBridge.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "Libplanet",
    "NineChronicles",
    "Ethereum"
  ],
  "author": "Planetarium",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/planetarium/NineChronicles.EthBridge/issues"
  },
  "homepage": "https://github.com/planetarium/NineChronicles.EthBridge#readme",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-typescript": "^7.13.0",
    "@types/elliptic": "^6.4.13",
    "@types/ethereum-protocol": "^1.0.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/web3-provider-engine": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^27.0.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "wait-for-expect": "^3.0.2"
  },
  "dependencies": {
    "@planetarium/aws-kms-provider": "^0.3.4",
    "@sentry/node": "^6.4.1",
    "@sentry/tracing": "^6.4.1",
    "@slack/web-api": "^6.2.3",
    "@truffle/hdwallet-provider": "^1.3.0",
    "@types/asn1js": "^2.0.2",
    "@types/sqlite3": "^3.1.7",
    "asn1js": "^2.1.1",
    "async-mutex": "^0.3.1",
    "axios": "^0.21.1",
    "bencodex": "^0.1.1",
    "bigint-buffer": "^1.1.5",
    "bigint-conversion": "^2.1.12",
    "console-stamp": "^3.0.3",
    "decimal.js": "^10.3.1",
    "dotenv": "^8.2.0",
    "elliptic": "^6.5.4",
    "read-bigint": "^0.1.6",
    "sqlite3": "^5.0.2",
    "web3": "^1.4.0"
  }
}
